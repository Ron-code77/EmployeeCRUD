        <div style="background-color: #007bff; color: #fff; font-size: 24px; font-weight: bold; padding: 10px; text-align: center;">
            Employee App
        </div>

        <nav class="nav-bar">
            <ul>
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
